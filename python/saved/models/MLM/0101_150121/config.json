{
    "name": "MLM",
    "n_gpu": 0,
    "seed": 10,
    "model": {
        "type": "MLMBertModel",
        "args": {}
    },
    "dataset": {
        "type": "ReviewsDataset",
        "args": {}
    },
    "dataloader": {
        "type": "DataLoader",
        "args": {
            "batch_size": 4,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 4
        }
    },
    "optimizer": {
        "type": "SGD",
        "args": {
            "lr": 0.001,
            "weight_decay": 0
        }
    },
    "loss": "nll_loss",
    "metrics": [
        "accuracy"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,
        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        "monitor": "min val_loss",
        "early_stop": 10,
        "tensorboard": true
    }
}