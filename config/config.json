{
    "name": "MLM",
    "logging_verbosity": 1,
    "logging_to_file": true,
    "logging_dir": "log",
    "tb_dir": "tb_log",
    "use_gpu": false,
    "n_gpu": 0,
    "main_gpu": 0,
    "seed": 10,
    "do_validation": false,
    "model": {
        "type": "MLMBertModel",
        "args": {}
    },
    "dataset": {
        "type": "ReviewsDataset",
        "args":{
            "n_samples": 1000
        }
    },
    "dataloader": {
        "type": "DataLoader",
        "args":{
            "batch_size": 16,
            "shuffle": true,
            "num_workers": 4
        }
    },
    "optimizer": {
        "type": "SGD",
        "args":{
            "lr": 5e-2,
            "weight_decay": 0
        }
    },
    "loss": "cross_entropy_loss",
    "metrics": [
        "accuracy"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,
        "save_dir": "checkpoint/",
        "save_period": 1,
        "log_step": 1,
        "verbosity": 1,
        "monitor": "min val_loss",
        "early_stop": 10,
        "tensorboard": true
    }
}
